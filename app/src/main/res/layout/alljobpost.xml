<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_margin="15dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:padding="5dp"
            android:id="@+id/all_job_post_title"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="31 July,2018"
            android:id="@+id/all_job_post_date"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#FF0A51BC"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Description"
            android:padding="5dp"
            android:maxLines="3"
            android:id="@+id/all_jos_post_description"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Skills"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/black"
            android:id="@+id/all_job_post_skills"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Salary"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/all_job_post_salary"
            android:textColor="#FFBC0B08"/>









    </LinearLayout>

</androidx.cardview.widget.CardView>